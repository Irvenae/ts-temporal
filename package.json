{
  "name": "ts-temporal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "clean": "rm -rf node_modules; rm -rf lib",
    "lint": "eslint .",
    "worker": "ts-node src/runWorker.ts",
    "client": "ts-node src/runClient.ts",
    "test": "node ./node_modules/.bin/jest --testTimeout=600000 --watch src --runInBand --forceExit"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "modulePaths": ["src"],
    "modulePathIgnorePatterns": ["<rootDir>/dist", "<rootDir>/lib"],
    "moduleFileExtensions": ["js", "json", "jsx", "ts", "tsx", "node"],
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./jestSetup.ts"
    ]
  },
  "dependencies": {
    "temporalio": "^1.5.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@temporalio/testing": "^1.5.2",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-jest": "^28.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "jest": "^28.1.0",
    "segfault-handler": "^1.3.0"
  },
  "engines": {
    "node": ">=16.10",
    "yarn": ">=1.21.1"
  }
}
